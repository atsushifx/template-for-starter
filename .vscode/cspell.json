{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/packages/cspell-types/cspell.schema.json",
  "version": "0.2",
  "import": [
    "${env:XDG_CONFIG_HOME}/vscode/cspell.config.json"
  ],
  "language": "en",
  "caseSensitive": true,
  "allowCompoundWords": true,
  "dictionaryDefinitions": [
    {
      "name": "project-dic",
      "description": "user dictionary for this project",
      "path": "./cspell/dicts/project.dic",
      "addWords": true,
      "scope": "workspace"
    }
  ],

  "dictionaries": [
    "en-us",
    // special terms
    "software-terms",
    "public-licenses",
    // programming languages dictionaries
    "markdown",
    "css",
    "html",
    "fullstack",
    "typescript",
    "shellscript",
    "powershell",
    "vim",
    // user defined dictionaries
    "user-dic",
    "project-dic"
  ],

  "useGitignore": true
}
